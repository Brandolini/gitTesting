<% layout ('layout') -%>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">


                <% if (message.length > 0) { %>
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= message %>
                    </div>
                    <% } %>

                        <form method="post" class="form-signin">
                            <h2>Edit Info</h2>

                            <label for="inputName" class="sr-only">Username</label>
                            <input type="text" value="<%= user.profile.name %>" id="inputName" name="name" class="form-control" placeholder="Username" required autofocus>
                            <label for="inputAddress" class="sr-only">Address</label>
                            <input type="text" value="<%= user.address %>" name="address" id="inputAddress" class="form-control" placeholder="Address" required>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="remember-me"> Remember me
                                </label>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block btn-success" type="submit">Submit</button>
                        </form>
            </div>


        </div>